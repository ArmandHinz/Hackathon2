{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }}{% endblock %}

{% block body %}
{{ include('nav.html.twig') }}
<div class="uk-background-default ">
    <h1 class="text-center 3xl"> Hello {{ app.user.firstname }} </h1>
    
    <h4 class="text-center text-3xl text-gray-500">Name : </h4> 
        <div class="text-center">
            {{ app.user.firstname }}<br>
        </div>
 
    <h4 class="text-center text-3xl text-gray-500">LastName : </h4> 
        <div class="text-center ">
            {{ app.user.lastname }}<br>
        </div>

    <h4 class="text-center text-3xl text-gray-500">Email : </h4> 
        <div class="text-center">
            {{ app.user.email }}<br>
        </div>

    <h4 class="text-center text-3xl text-gray-500">Description : </h4> 
        <div class="text-center">
            {{ app.user.description }}<br>
        </div>

    <h4 class="text-center text-3xl text-gray-500">Techno : </h4> 
        <div class="text-center">
            {{ app.user.techno }}
        </div>
        {% if app.user.techno is null %}
            <p class="text-center"> You don't have techno</p>  
        {% else %}
            {% for techno in technos %}
                {{ app.user.techno }}
            {% endfor %}
        {% endif %}

    <h4 class="text-center text-3xl text-gray-500">Avatar : </h4>
        {% if app.user.avatar is null %}
            <p class="text-center">You don't have avatar</p>
        {% else %}
            <div>
                <img class="uk-flex uk-flex-center uk-align-center img_test" src="{{ app.user.avatar.url }}" alt="avatar"/>
            </div>
        {% endif %}

        

    <a class="uk-flex uk-flex-center uk-align-center uk-link-text uk-text-lead"href="{{ path('change_avatar')}}">Change avatar</a>
    <br>
    <a class="uk-flex uk-flex-center uk-align-center uk-link-text uk-text-lead"href='{{path('user_edit', {id: app.user.id}) }}'> Edit </a>
</div>
{% endblock %}