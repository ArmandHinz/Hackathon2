{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}

    <!-- component -->
    <div class="max-w-md w-full space-y-8 p-10 bg-white rounded-xl shadow-lg z-10 m-auto mt-10 mb-5">
        <div class="grid  gap-8 grid-cols-1">
            <div class="flex flex-col ">
                <div class="flex flex-col sm:flex-row items-center">
                    <h2 class="font-semibold text-lg mr-auto">Register</h2>
                    <div class="w-full sm:w-auto sm:ml-auto mt-3 sm:mt-0"></div>
                </div>
                <div class="mt-5">
                    <div class="form">
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.lastname) }}
                        {{ form_row(registrationForm.description) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.roles) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="mt-5 text-right md:space-x-3 md:block flex flex-col-reverse">
                        <button class=" md:mb-0 bg-green-400 px-5 py-2 text-sm shadow-sm font-medium tracking-wider text-white rounded-full hover:shadow-lg hover:bg-green-500">{{ button_label|default('Register') }}</button>
                        <a href="{{ path("app_login")}}">Currently member ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(registrationForm) }}

{% endblock %}
