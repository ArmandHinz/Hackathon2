{% extends 'base.html.twig' %}

{% block title %}Index Projet{% endblock %}

{% block body %}
    <div class="grid grid-flow-col grid-cols-3 gap-4 ml-lg-5">
        {% for projet in projets %}
            <div class="mt-6">
                <div class="max-w-4xl px-10 py-6 mx-auto bg-white rounded-lg shadow-md">
                    <div class="mt-2"><a href="{{ path('projet_show', {'id': projet.id}) }}" class="text-2xl font-bold text-gray-700 hover:underline">{{ projet.name }}</a>
                        <p class="mt-2 text-gray-600">
                            {{ projet.description }}
                        </p>
                    </div>
                    <hr/>
                    <div class="flex items-center justify-between mt-4">
                        {% if app.user.id == projet.user.id %}
                            <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="uk-button uk-button-text uk-align-right">editer</a>
                            <a href="{{ path('chanel_add', {'projet': projet.id}) }}" class="uk-button uk-button-text uk-align-right">Ajouter chanel</a>
                        {% endif %}
                        {% for chanel in projet.chanel %}
                            <li class="">
                            {% if chanel.isValidate == 1 %}
                                {{ chanel.techno.name }} <p>Freelance trouv√©!</p>
                            {% else %}
                                {{ chanel.techno.name }}
                                    {% if app.user.roles.0 == "ROLE_FREELANCE" %}
                                        <a class="px-2 py-1 font-bold text-gray-100 rounded" style="background-color: green " href="{{ path('chanel_add_user', {'id': chanel.id}) }}">Rejoindre</a>
                                    {% endif %}
                            </li>
                            {% endif %}
                            <a href="{{ path('projet_show', {'id': projet.id}) }}" class="uk-button uk-button-text uk-align-right">Participer au projet</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('projet_new') }}">New projet</a>
{% endblock %}
